<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".drawer"
    tools:showIn="@layout/app_bar_drawer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@+id/bottom"
            android:layout_marginBottom="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f7f7f7"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <com.daimajia.slider.library.Indicators.PagerIndicator
                            android:id="@+id/custom_indicator"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            app:selected_color="@color/all"
                            app:unselected_color="@color/white">

                            <com.daimajia.slider.library.SliderLayout
                                android:id="@+id/slider"
                                android:layout_width="fill_parent"
                                android:layout_height="180dp"
                                android:pointerIcon="hand" />
                        </com.daimajia.slider.library.Indicators.PagerIndicator>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:background="#f34f38"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imageViews42"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="60dp"
                            app:srcCompat="@drawable/home3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="26dp"
                            android:gravity="center"
                            android:text="15% CASH BACK ON REGULAR SERVICE OF YOUR CAR."
                            android:textColor="#ffffff"
                            android:textSize="10dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageViewsl4242"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="15dp"
                                app:srcCompat="@drawable/home4" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="10dp"
                                    android:text="On the Schedule"
                                    android:textSize="12dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#f34f38"
                                    android:textSize="12dp"
                                    android:id="@+id/booking_tv"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="5dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="90dp"
                                android:background="#f34f38"
                                android:id="@+id/booking_btn"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="4dp"
                                    android:text="BOOKING"
                                    android:textAlignment="center"
                                    android:textColor="#ffffff" />

                            </LinearLayout>


                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:layout_marginBottom="50dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:weightSum="2">

                            <RelativeLayout
                                android:id="@+id/carwash"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                >

                                <ImageView
                                    android:id="@+id/car1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/carwash"
                                    android:layout_centerHorizontal="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_below="@+id/car1"
                                    android:text="CAR WASH"
                                    android:textColor="#000"
                                    android:textSize="14sp"
                                    android:layout_marginTop="10dp"
                                    android:textAlignment="center"
                                    />

                            </RelativeLayout>


                            <LinearLayout
                                android:layout_width="10dp"
                                android:layout_height="match_parent">
                            </LinearLayout>



                            <RelativeLayout
                                android:id="@+id/cardenting"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#ffffff">

                                <ImageView
                                    android:id="@+id/car2"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/cardenting"
                                    android:layout_centerHorizontal="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_below="@+id/car2"
                                    android:text="CAR DETAILING"
                                    android:textColor="#000"
                                    android:layout_marginTop="10dp"
                                    android:textSize="14sp"
                                    android:textAlignment="center" />

                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:weightSum="2">

                            <RelativeLayout
                                android:id="@+id/regularservice"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#ffffff">

                                <ImageView
                                    android:id="@+id/car3"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/regularservice"
                                    android:layout_centerHorizontal="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_below="@+id/car3"
                                    android:text="REGULAR SERVICE"
                                    android:textColor="#000"
                                    android:layout_marginTop="10dp"
                                    android:textSize="14sp"
                                    android:textAlignment="center" />

                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="10dp"
                                android:layout_height="match_parent">
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/denting"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#ffffff">

                                <ImageView
                                    android:id="@+id/car4"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/denting"
                                    android:layout_centerHorizontal="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_below="@+id/car4"
                                    android:text="DENTS &amp; PAINTS"
                                    android:textColor="#000"
                                    android:layout_marginTop="10dp"
                                    android:textSize="14sp"
                                    android:textAlignment="center" />

                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:weightSum="2"
                            android:layout_marginBottom="10dp">

                            <RelativeLayout
                                android:id="@+id/caraccess"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#ffffff">

                                <ImageView
                                    android:id="@+id/car5"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/caracc"
                                    android:layout_centerHorizontal="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_below="@+id/car5"
                                    android:text="CAR ACCESSORIES"
                                    android:textColor="#000"
                                    android:layout_marginTop="10dp"
                                    android:textSize="14sp"
                                    android:textAlignment="center" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="10dp"
                                android:layout_height="match_parent">
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/carrep"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#ffffff">

                                <ImageView
                                    android:id="@+id/car6"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/carreper"
                                    android:layout_centerHorizontal="true" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_below="@+id/car6"
                                    android:text="CAR REPAIRS"
                                    android:textColor="#000"
                                    android:textSize="14sp"
                                    android:layout_marginTop="10dp"
                                    android:textAlignment="center" />

                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>






                </LinearLayout>



        </LinearLayout>

            </ScrollView>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="?android:attr/windowBackground"
                app:itemBackground="@color/all"
                app:itemIconTint="@color/white"
                app:itemTextColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:menu="@menu/navigation"
                />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>